<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mastersofmemory.memoryladder"
    android:installLocation="auto">

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true" />

    <uses-permission android:name="com.android.vending.BILLING" />
    
    <application
        android:name="com.memoryladder.MyApplication"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning"
        >

        <activity
            android:name="com.memoryladder.choosetest.ChooseTest"
            android:theme="@style/AppTheme.BrandedLaunch"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.memoryladder.testdetailsscreen.TestDetailsActivity"
            android:label="@string/app_name">
        </activity>

        <activity
            android:name="com.memoryladder.scoring.ScoreActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.memoryladder.choosepegsscreens.ChoosePegs_Numbers"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.memoryladder.choosepegsscreens.ChoosePegs_Cards"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.memoryladder.numberschallenges.HowItWorks_Numbers"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.memoryladder.taketest.cards.HowItWorks_Cards"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.memoryladder.choosepegsscreens.Help_LoadPegs"
            android:noHistory="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.memoryladder.numberschallenges.Numbers_Mem"
            android:configChanges="keyboardHidden|orientation"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.memoryladder.numberschallenges.Numbers_Recall"
            android:configChanges="keyboardHidden|orientation"
            android:windowSoftInputMode="adjustPan"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.memoryladder.numberschallenges.Numbers_Review"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.memoryladder.taketest.GameActivity"
            android:label="@string/title_activity_card_prototype"
            android:windowSoftInputMode="adjustPan">
        </activity>
    </application>

</manifest>