<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SmallCardStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/small_card.height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/border_black_on_white</item>
    </style>

    <style name="SmallCardHighlightedStyle" parent="SmallCardStyle">
        <item name="android:background">@drawable/border_highlight_yellow</item>
    </style>

    <style name="SmallCardSuitStyle">
        <item name="android:layout_width">@dimen/small_card.suit.size</item>
        <item name="android:layout_height">@dimen/small_card.suit.size</item>
        <item name="android:layout_gravity">center_horizontal|bottom</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="SmallCardRankStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/small_card.rank.size</item>
    </style>

    <style name="LargeCardLayoutStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LargeCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="SuitSelectorCell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/suit_selector.height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/border_black_on_white</item>
    </style>

    <style name="MnemonicTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/cards.mnemonic_hint.text.size</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="NextGroupButton">
        <item name="android:layout_width">@dimen/navigation_button.size</item>
        <item name="android:layout_height">@dimen/navigation_button.size</item>
        <item name="android:layout_marginTop">@dimen/navigation_button.margin</item>
        <item name="android:layout_marginBottom">@dimen/navigation_button.margin</item>
        <item name="android:background">@drawable/shape_rounded_corners</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="PageSelectorButton">
        <item name="android:layout_width">@dimen/page_selector.size</item>
        <item name="android:layout_height">@dimen/page_selector.size</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/shape_rounded_corners</item>
    </style>

    <style name="ChooseTest_Image">
        <item name="android:layout_width">@dimen/choose_test.image.size</item>
        <item name="android:layout_height">@dimen/choose_test.image.size</item>
        <item name="android:layout_marginLeft">@dimen/choose_test.image.margin.left</item>
        <item name="android:background">@drawable/selector_orange</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="ChooseTest_Text">
        <item name="android:layout_width">@dimen/choose_test.image.size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/choose_test.image.margin.left</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textSize">@dimen/choose_test.text.size</item>
    </style>

    <style name="SettingList_Text">
        <item name="android:layout_height">@dimen/pregame.settings.list.row.height</item>
        <item name="android:layout_marginTop">@dimen/pregame.settings.list.margin_between_rows</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="SettingList_Text_Label" parent="SettingList_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/pregame.settings.list.text_size</item>
        <item name="autoSizeMaxTextSize">@dimen/pregame.settings.list.text_size</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="SettingList_Text_Editable" parent="SettingList_Text">
        <item name="android:layout_width">@dimen/pregame.settings.list.value.width</item>
        <item name="android:background">@drawable/selector_text</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="autoSizeMaxTextSize">@dimen/pregame.settings.list.text_size</item>

    </style>

    <style name="SettingList_Text_Target" parent="SettingList_Text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/pregame.settings.list.summary.text_size</item>
        <item name="android:textColor">@color/yellow</item>
    </style>

    <style name="Keyboard_Key">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/keyboard_highlightRecallDigits</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:textSize">@dimen/numeric_keyboard.textSize</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Word_List_Index">
        <item name="android:layout_width">@dimen/words.list.indexWidth</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Word_List_Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">@dimen/words.list.memorytext.size</item>
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Word_List_Review_Text" parent="Word_List_Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textSize">@dimen/words.list.reviewtext.size</item>
    </style>

    <style name="Faces_Name_Memory">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="autoSizeMaxTextSize">100sp</item>
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="Faces_Recall_Input">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">textFilter</item>
        <item name="android:privateImeOptions">nm</item>
        <item name="android:hint">First Name</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Faces_Review_Cell">
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="autoSizeMaxTextSize">100sp</item>
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeStepGranularity">2sp</item>
        <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="Faces_Review_Left_Cell" parent="Faces_Review_Cell">
        <item name="android:layout_marginRight">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>
    </style>

    <style name="Faces_Review_Right_Cell" parent="Faces_Review_Cell">
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginStart">2dp</item>
    </style>

</resources>