<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:orientation="vertical" android:layout_height="fill_parent" android:id="@+id/LinearLayout">
    <FrameLayout android:id="@+id/TopBarLayout" android:layout_width="fill_parent" android:background="@drawable/graphic_titlebar" android:layout_height="80dp">
		<Button android:text="Review" android:textColor="#ffffffff" android:id="@+id/button1" android:background="@drawable/selector_graphic_buttons" android:layout_gravity="center_vertical" android:layout_height="70dp" android:layout_width="120dp" android:textSize="30sp" android:layout_marginLeft="8dp"></Button>
		<TextView android:id="@+id/TitleText" android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_width="wrap_content" android:layout_gravity="center_vertical|center_horizontal" android:textSize="50sp" android:text="Scores"></TextView>
		<Button android:text="Home" android:textColor="#ffffffff" android:id="@+id/button2" android:background="@drawable/selector_graphic_buttons" android:layout_gravity="right|center_vertical" android:layout_height="70dp" android:layout_width="120dp" android:textSize="30sp" android:layout_marginRight="8dp"></Button>
	</FrameLayout>     
    <RelativeLayout android:id="@+id/RelativeLayout1" android:layout_width="fill_parent" android:layout_height="wrap_content">
        <LinearLayout android:id="@+id/linearLayout1" android:layout_height="wrap_content" android:layout_width="fill_parent">
            <Button android:id="@+id/StepsButton" android:text="Steps" android:layout_width="0dp" android:layout_weight="1" android:background="@drawable/score_tab_selected" android:textColor="#ff000000" android:layout_marginLeft="2dp" android:layout_height="65dp" android:textSize="32sp"></Button>
            <Button android:id="@+id/ChampButton" android:textColor="#ffffffff" android:layout_width="0dp" android:layout_weight="1" android:background="@drawable/score_tab_unselected" android:layout_height="65dp" android:textSize="32sp" android:text="Compete"></Button>
            <Button android:id="@+id/CustomButton" android:textColor="#ffffffff" android:layout_width="0dp" android:layout_weight="1" android:background="@drawable/score_tab_unselected" android:layout_marginRight="2dp" android:layout_height="65dp" android:textSize="32sp" android:text="Train"></Button>
        </LinearLayout>
        <ImageView android:id="@+id/imageView1" android:layout_width="fill_parent" android:scaleType="fitXY" android:src="@drawable/score_border" android:layout_height="70dp" android:layout_marginTop="57dp"></ImageView>
        <TextView android:layout_height="wrap_content" android:text="Abstract Images" android:layout_width="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:id="@+id/GameTypeText" android:layout_centerHorizontal="true" android:textSize="30sp" android:layout_marginTop="75dp"></TextView>
        <Button android:id="@+id/LastGameButton" android:background="@drawable/selector_previous_arrow" android:layout_marginLeft="160dp" android:layout_height="60dp" android:layout_width="60dp" android:layout_marginTop="64dp"></Button>
        <Button android:layout_alignTop="@+id/LastGameButton" android:background="@drawable/selector_next_arrow" android:id="@+id/NextGameButton" android:layout_alignParentRight="true" android:layout_marginRight="160dp" android:layout_height="60dp" android:layout_width="60dp"></Button>
    </RelativeLayout>
    <FrameLayout android:id="@+id/GraphLayout" android:layout_marginTop="20dp" android:layout_width="fill_parent" android:background="#dd151515" android:visibility="visible" android:layout_height="400dp" android:layout_marginLeft="60dp" android:layout_marginRight="60dp">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Past Scores" android:id="@+id/textView2" android:textAppearance="?android:attr/textAppearanceLarge" android:layout_gravity="left" android:paddingLeft="30dp" android:textSize="50sp"></TextView>
        <ImageView android:id="@+id/ImageView1" android:layout_gravity="center_vertical" android:paddingTop="15dp" android:src="@drawable/text_score" android:scaleType="fitXY" android:layout_marginLeft="10dp" android:layout_width="20dp" android:layout_height="120dp"></ImageView>
        <ImageView android:scaleType="fitXY" android:id="@+id/graph" android:layout_height="fill_parent" android:layout_width="fill_parent" android:layout_gravity="bottom" android:layout_marginBottom="5dp" android:layout_marginLeft="30dp" android:layout_marginTop="70dp" android:layout_marginRight="80dp"></ImageView>
        <Button android:background="@drawable/selector_prearrowbutton" android:text="Take Test" android:textColor="#ffffffff" android:layout_gravity="right" android:layout_marginRight="5dp" android:id="@+id/AnimatedArrow" android:layout_height="140dp" android:layout_width="200dp" android:textSize="24sp" android:paddingRight="50dp"></Button>
        <Button android:layout_gravity="right" android:text="Take Test" android:textColor="#ffffffff" android:layout_marginRight="6dp" android:background="@drawable/pre_arrow_faded" android:id="@+id/TakeTestButton" android:layout_height="140dp" android:layout_width="200dp" android:textSize="24sp" android:paddingRight="50dp"></Button>
    </FrameLayout>
    <FrameLayout android:layout_width="fill_parent" android:layout_marginTop="20dp" android:id="@+id/StepsLayout" android:layout_height="400dp" android:visibility="gone">
        <ImageView android:id="@+id/SuccessGraphic" android:scaleType="fitXY" android:layout_gravity="bottom" android:src="@drawable/graphic_mark_x" android:layout_marginLeft="50dp" android:layout_width="280dp" android:layout_height="240dp"></ImageView>
        <TextView android:layout_height="wrap_content" android:id="@+id/SuccessText" android:layout_width="wrap_content" android:text="You passed Step 3!" android:paddingLeft="80dp" android:paddingTop="50dp" android:textSize="55sp"></TextView>
        <Button android:layout_gravity="right" android:id="@+id/NextStepButton" android:background="@drawable/selector_prearrowbutton" android:text="Next Step" android:textColor="#ffffffff" android:layout_marginRight="50dp" android:layout_height="180dp" android:layout_width="280dp" android:layout_marginTop="120dp" android:textSize="32sp" android:paddingRight="80dp"></Button>
    </FrameLayout>
    <FrameLayout android:layout_width="fill_parent" android:background="@drawable/layout_blue" android:layout_height="fill_parent" android:layout_marginTop="15dp" android:id="@+id/layout">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/LastScore" android:text="Last Score" android:textColor="#ffffffff" android:paddingLeft="100dp" android:textSize="70sp" android:paddingTop="40dp"></TextView>
        <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/linearLayout2" android:paddingLeft="120dp" android:paddingTop="180dp">
            <LinearLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/LabelLayout" android:orientation="vertical">
                <TextView android:id="@+id/Label0" android:text="Recall Accuracy:" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="#ffffffff" android:layout_marginTop="20dp" android:textSize="35sp"></TextView>
                <TextView android:id="@+id/Label1" android:text="Memorization time:" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="#ffffffff" android:textSize="35sp" android:layout_marginTop="10dp"></TextView>
                <TextView android:id="@+id/Label2" android:text="TextView" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="#ffffffff" android:textSize="35sp" android:layout_marginTop="10dp"></TextView>
                <TextView android:id="@+id/ScoreLabel" android:text="Score:" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="#ffe7f50c" android:textSize="50sp" android:layout_marginTop="10dp"></TextView>
            </LinearLayout>
            <LinearLayout android:layout_marginLeft="20dp" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/ValueLayout" android:orientation="vertical">
                <TextView android:id="@+id/Value0" android:layout_marginTop="20dp" android:text="90% (18 / 20)" android:layout_height="wrap_content" android:textColor="#ffffffff" android:layout_width="wrap_content" android:textSize="35sp"></TextView>
                <TextView android:id="@+id/Value1" android:text="4:32" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="#ffffffff" android:textSize="35sp" android:layout_marginTop="10dp"></TextView>
                <TextView android:id="@+id/Value2" android:text="TextView" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="#ffffffff" android:textSize="35sp" android:layout_marginTop="10dp"></TextView>
                <TextView android:id="@+id/ScoreValue" android:text="15" android:layout_height="wrap_content" android:layout_width="wrap_content" android:textColor="#ffe7f50c" android:textSize="50sp" android:layout_marginTop="10dp"></TextView>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
 
</LinearLayout>

