<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/tableLayout1"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/words_list_background">

        <EditText
            android:id="@+id/dates_input"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:maxLength="4"
            android:textColor="#E6272727"
            android:textSize="28sp"
            android:inputType="number"
            tools:text="1984"
            android:importantForAutofill="no"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

                <TextView
                    android:id="@+id/dates_date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:maxLines="2"
                    android:paddingLeft="8dp"
                    android:paddingStart="8dp"
                    android:paddingRight="8dp"
                    android:paddingEnd="8dp"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="#E6272727"
                    tools:text="1972"
                    />

                <ImageView
                    android:id="@+id/dates_review_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginLeft="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginEnd="12dp"
                    app:srcCompat="@drawable/icon_review_correct_green"
                    android:contentDescription="Outcome Icon"
                    />
        </LinearLayout>


        <TextView
            android:id="@+id/dates_event_details_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="4dp"
            android:paddingStart="4dp"
            android:paddingRight="8dp"
            android:paddingEnd="8dp"
            android:gravity="start|center_vertical"
            android:textColor="#E6272727"
            android:maxLines="2"
            app:autoSizeMinTextSize="20sp"
            app:autoSizeMaxTextSize="26sp"
            app:autoSizeStepGranularity="2sp"
            app:autoSizeTextType="uniform"
            tools:text="Man lands on moon and boy wasn't it wonderful you could have seen the look on their faces."
            />
</LinearLayout>