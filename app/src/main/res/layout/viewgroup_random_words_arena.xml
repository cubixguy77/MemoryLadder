<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!--suppress AndroidUnknownAttribute -->
    <data class="RandomWordsFragmentBinding">
        <variable
            name="viewModel"
            type="com.MemoryLadder.TakeTest.RandomWords.ui.viewmodel.RandomWordsViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/root_words"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/timerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_word_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:text="@{@string/wordCount(viewModel.wordCount)}"
                tools:text="XX Words"
                />

            <include
                layout="@layout/viewgroup_timer">
            </include>

            <ImageView
                android:id="@+id/buttonToggleNightMode"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="end|center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:src="@{viewModel.nightMode ? @drawable/icon_night_mode_on : @drawable/icon_night_mode_off}"
                android:onClick="@{viewModel::toggleNightMode}"
                android:contentDescription="@string/night_mode_toggle" />

        </FrameLayout>

        <TextView
            android:id="@+id/text_column_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="8dp"
            android:text="@{@string/wordCount(viewModel.columnNum)}"
            tools:text="3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/button_prev_column"
                style="@style/NextGroupButton"
                app:srcCompat="@drawable/ic_arrow_left"
                android:layout_marginLeft="@dimen/navigation_button.margin"
                android:layout_marginRight="@dimen/navigation_button.margin"
                android:onClick="@{viewModel::prevColumn}"
                android:contentDescription="@string/prev_column" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/word_list"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginBottom="16dp"
                tools:listitem="@layout/list_item_random_words_memory"
                />

            <android.support.v7.widget.AppCompatImageButton
                android:id="@+id/button_next_column"
                style="@style/NextGroupButton"
                app:srcCompat="@drawable/ic_arrow_right"
                android:layout_marginLeft="@dimen/navigation_button.margin"
                android:layout_marginRight="@dimen/navigation_button.margin"
                android:onClick="@{viewModel::nextColumn}"
                android:contentDescription="@string/next_column" />
        </LinearLayout>
    </LinearLayout>

</layout>