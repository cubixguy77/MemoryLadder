<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#292929"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frameLayout1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/InstructionsDialogTitleText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="8dp"
            tools:text="Speed Numbers"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </FrameLayout>

    <ScrollView
        android:id="@+id/InstructionScrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <LinearLayout
            android:id="@+id/Container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Instructions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Instructions"
                android:textStyle="bold"
                android:textSize="@dimen/instructions.section_text.size" />


            <TextView
                android:id="@+id/about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/instructions.general_text.size"
                tools:text="fake In this test, you will be presented with several rows of digits. Your job is to memorize as many rows of digits as possible in the time allotted." />

            <TextView
                android:id="@+id/Scoring"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Scoring"
                android:textStyle="bold"
                android:textSize="@dimen/instructions.section_text.size" />

            <TextView
                android:id="@+id/preface"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/instructions.general_text.size"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/Row1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Bullet1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="•" />

                <TextView
                    android:id="@+id/Point1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:textSize="@dimen/instructions.general_text.size"
                    tools:text="fake 1 point for each digit if there are 0 mistakes in the row." />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Row2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Bullet2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="•" />

                <TextView
                    android:id="@+id/Point2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:textSize="@dimen/instructions.general_text.size"
                    tools:text="fake 0.5 point for each digit if there is 1 mistake in the row." />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/Row3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/Bullet3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:text="•" />

                <TextView
                    android:id="@+id/Point3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:textSize="@dimen/instructions.general_text.size"
                    tools:text="@string/numbers_written_point3" />
            </LinearLayout>

            <TextView
                android:id="@+id/AddOn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textSize="@dimen/instructions.general_text.size" />

            <TextView
                android:id="@+id/AddOn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textSize="@dimen/instructions.general_text.size" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

