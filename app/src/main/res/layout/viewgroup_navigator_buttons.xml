<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:showIn="@layout/viewgroup_written_numbers_arena"
    tools:visibility="visible">

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/prevButton"
        style="@style/NextGroupButton"
        app:srcCompat="@drawable/ic_arrow_left"
        android:layout_marginRight="@dimen/navigation_button.margin_from_center"
        android:contentDescription="Last Group" />

    <android.support.v7.widget.AppCompatImageButton
        android:id="@+id/nextButton"
        style="@style/NextGroupButton"
        app:srcCompat="@drawable/ic_arrow_right"
        android:layout_marginLeft="@dimen/navigation_button.margin_from_center"
        android:contentDescription="Next Group" />

</FrameLayout>