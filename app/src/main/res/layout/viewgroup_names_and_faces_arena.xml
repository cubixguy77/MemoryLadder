<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!--suppress AndroidUnknownAttribute -->
    <data class="NamesAndFacesFragmentBinding">
        <import type="android.view.View" />
        <variable
            name="viewModel"
            type="com.memoryladder.taketest.namesandfaces.ui.viewmodel.NamesAndFacesViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/root_faces"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:animateLayoutChanges="true"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/timerContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/text_word_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:text="@{@string/faceCount(viewModel.faceCount)}"
                android:textSize="@dimen/page_selector.text.size"
                tools:text="XX Faces" />

            <include
                layout="@layout/viewgroup_timer">
            </include>
        </FrameLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/grid_faces"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:focusableInTouchMode="true"
            android:descendantFocusability="beforeDescendants"
            app:layoutManager="android.support.v7.widget.GridLayoutManager"
            tools:listitem="@layout/list_item_names_and_faces"
            />
    </LinearLayout>
</layout>