<?xml version="1.0" encoding="utf-8"?>

<com.MemoryLadder.TakeTest.WrittenNumbers.Keyboard.NumericKeyboardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/numeric_keyboard.layout_height"
    android:visibility="gone"
    tools:visibility="visible">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/key_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_arrow_left_small_black"
            android:foreground="?attr/selectableItemBackground"
            android:background="@color/keyboard.highlightRecallDigits"
            android:contentDescription="Back"
            />

        <ImageButton
            android:id="@+id/key_forward"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_arrow_right_small_black"
            android:foreground="?attr/selectableItemBackground"
            android:background="@color/keyboard.highlightRecallDigits"
            android:contentDescription="Forward" />

        <ImageButton
            android:id="@+id/key_backspace"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/icon_backspace"
            android:foreground="?attr/selectableItemBackground"
            android:background="@color/keyboard.highlightRecallDigits"
            android:contentDescription="BackSpace" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/key_0"
            style="@style/Keyboard_Key"
            android:text="0" />

        <Button
            android:id="@+id/key_1"
            style="@style/Keyboard_Key"
            android:text="1"
             />

        <Button
            android:id="@+id/key_2"
            style="@style/Keyboard_Key"
            android:text="2"
             />

        <Button
            android:id="@+id/key_3"
            style="@style/Keyboard_Key"
            android:text="3"
             />

        <Button
            android:id="@+id/key_4"
            style="@style/Keyboard_Key"
            android:text="4"
             />
    </TableRow>

    <TableRow
        android:id="@+id/keyboardBottomRow"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/key_5"
            style="@style/Keyboard_Key"
            android:text="5"
             />

        <Button
            android:id="@+id/key_6"
            style="@style/Keyboard_Key"
            android:text="6"
             />

        <Button
            android:id="@+id/key_7"
            style="@style/Keyboard_Key"
            android:text="7"
             />

        <Button
            android:id="@+id/key_8"
            style="@style/Keyboard_Key"
            android:text="8"
             />

        <Button
            android:id="@+id/key_9"
            style="@style/Keyboard_Key"
            android:text="9"
             />
    </TableRow>

</com.MemoryLadder.TakeTest.WrittenNumbers.Keyboard.NumericKeyboardView>