<?xml version="1.0" encoding="utf-8"?>

<com.MemoryLadder.TakeTest.WrittenNumbers.Keyboard.NumericKeyboardView
    android:layout_width="match_parent"
    android:layout_height="@dimen/numeric_keyboard.layout_height"
    android:visibility="gone"
    tools:visibility="visible"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    >

<TableRow
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">

    <Button
        android:text="0"
        android:textSize="@dimen/numeric_keyboard.textSize"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:foreground="?attr/selectableItemBackground"
        android:background="@color/keyboard.highlightRecallDigits"
        android:id="@+id/key_0" />

    <Button
        android:text="1"
        android:textSize="@dimen/numeric_keyboard.textSize"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:foreground="?attr/selectableItemBackground"
        android:background="@color/keyboard.highlightRecallDigits"
        android:id="@+id/key_1" />

    <Button
        android:text="2"
        android:textSize="@dimen/numeric_keyboard.textSize"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:foreground="?attr/selectableItemBackground"
        android:background="@color/keyboard.highlightRecallDigits"
        android:id="@+id/key_2" />
    <Button
        android:text="3"
        android:textSize="@dimen/numeric_keyboard.textSize"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:foreground="?attr/selectableItemBackground"
        android:background="@color/keyboard.highlightRecallDigits"
        android:id="@+id/key_3" />
    <Button
        android:text="4"
        android:textSize="@dimen/numeric_keyboard.textSize"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:foreground="?attr/selectableItemBackground"
        android:background="@color/keyboard.highlightRecallDigits"
        android:id="@+id/key_4" />
</TableRow>

<TableRow
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">

    <Button
        android:text="5"
        android:textSize="@dimen/numeric_keyboard.textSize"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:foreground="?attr/selectableItemBackground"
        android:background="@color/keyboard.highlightRecallDigits"
        android:id="@+id/key_5" />

    <Button
        android:text="6"
        android:textSize="@dimen/numeric_keyboard.textSize"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:foreground="?attr/selectableItemBackground"
        android:background="@color/keyboard.highlightRecallDigits"
        android:id="@+id/key_6" />
    <Button
        android:text="7"
        android:textSize="@dimen/numeric_keyboard.textSize"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:foreground="?attr/selectableItemBackground"
        android:background="@color/keyboard.highlightRecallDigits"
        android:id="@+id/key_7" />
    <Button
        android:text="8"
        android:textSize="@dimen/numeric_keyboard.textSize"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:foreground="?attr/selectableItemBackground"
        android:background="@color/keyboard.highlightRecallDigits"
        android:id="@+id/key_8" />
    <Button
        android:text="9"
        android:textSize="@dimen/numeric_keyboard.textSize"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:foreground="?attr/selectableItemBackground"
        android:background="@color/keyboard.highlightRecallDigits"
        android:id="@+id/key_9" />
</TableRow>

</com.MemoryLadder.TakeTest.WrittenNumbers.Keyboard.NumericKeyboardView>