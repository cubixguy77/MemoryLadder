<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity.background"
    android:orientation="vertical"
    tools:context="com.MemoryLadder.TakeTest.GameActivity">

    <com.MemoryLadder.TakeTest.Timer.TimerView
        android:id="@+id/text_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="5:00"
        android:textColor="#ffffffff"
        android:textSize="@dimen/timer.text.size" />

    <com.MemoryLadder.TakeTest.WrittenNumbers.NumberGrid.MaxHeightScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        app:maxHeight="200dp">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/numberGrid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="fill_horizontal" />

    </com.MemoryLadder.TakeTest.WrittenNumbers.NumberGrid.MaxHeightScrollView>

    <include
        android:id="@+id/carousel"
        layout="@layout/viewgroup_numbers_carousel">
    </include>

    <include
        android:id="@+id/keyboard"
        layout="@layout/viewgroup_numeric_keyboard"
        android:visibility="visible"
        tools:visibility="visible"
        />

    <FrameLayout
        android:id="@+id/layout_button_start"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        tools:visibility="gone">

        <Button
            android:background="@drawable/selector_startbutton"
            android:id="@+id/button_start"
            android:layout_gravity="center"
            android:layout_height="180dp"
            android:layout_width="180dp" />
    </FrameLayout>

    <Button
        android:id="@+id/nextButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        tools:visibility="gone"
        />

</LinearLayout>